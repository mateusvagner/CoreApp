<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/extra_purple" /> <!-- Change the color code to your desired background color -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent color for the inner shape -->
            <stroke
                android:width="2dp"
            android:color="@color/extra_purple_light" />
        </shape>
    </item>
</layer-list>